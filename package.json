  "scripts": {
    "build": "docker build --pull -t whiteboard-client:prod .",
    "startDev": "docker run --name whiteboard-client-dev -p 127.0.0.1:8080:80 -v ${PWD}/dist/:/usr/share/nginx/html:ro -v ${PWD}/build/nginx.conf:/etc/nginx/nginx.conf:ro -d nginx:mainline",
    "start": "docker run --name whiteboard-client-prod -p 127.0.0.1:8080:8080 -d whiteboard-client:prod",
    "stopDev": "docker stop whiteboard-client-dev",
    "stop": "docker stop whiteboard-client-prod",
    "rmDev": "docker rm whiteboard-client-dev",
    "rm": "docker rm whiteboard-client-prod",
    "test": "mocha --require babel-core/register"
  }
